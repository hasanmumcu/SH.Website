@{ Layout = "~/Views/Shared/_LayoutProjectAdd.cshtml"; }
<!-- Site wrapper -->
<div class="wrapper">
    <!-- Navbar -->
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <!-- Right navbar links -->
